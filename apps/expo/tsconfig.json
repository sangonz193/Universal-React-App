{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "hooks/**/*",
    "assets/**/*.ts",
    "domains/**/*",
    "*.js",
    "*.ts",
    "../../shared/**/*",

    // Expo specific paths
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "references": [{ "path": "../../shared" }]
}
